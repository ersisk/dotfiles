// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "theme": {
    "mode": "system",
    "light": "Kanagawa Lotus",
    "dark": "Kanagawa Wave",
  },
  "context_servers": {},
  "restore_on_startup": "empty_tab",
  "disable_ai": false,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 20,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 20,
  "agent_buffer_font_size": 20,
  "buffer_line_height": {
    "custom": 2,
  },
  "drag_and_drop_selection": {
    "enabled": false,
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "auto_update": false,
  "extend_comment_on_newline": false,
  "horizontal_scroll_margin": 1,
  "vertical_scroll_margin": 1,
  "tab_size": 2,
  "minimap": {
    "show": "never",
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "tab_bar": {
    "show": true,
  },
  "project_panel": {
    "dock": "left",
    "default_width": 400,
    "hide_root": true,
    "auto_fold_dirs": false,
    "starts_open": false,
    "git_status": false,
    "sticky_scroll": false,
    "scrollbar": {
      "show": "never",
    },
    "indent_guides": {
      "show": "never",
    },
  },
  "scrollbar": {
    "show": "never",
  },
  "file_finder": {
    "modal_max_width": "large",
  },
  // Only show error on tab
  "tabs": {
    "show_diagnostics": "errors",
  },
  // Indentation, rainbow indentation
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
  },
  "agent": {
    "favorite_models": [
      {
        "provider": "copilot_chat",
        "model": "gemini-3.1-pro-preview",
        "enable_thinking": false
      },
      {
        "provider": "copilot_chat",
        "model": "gpt-5.3-codex",
        "enable_thinking": false
      },
      {
        "provider": "copilot_chat",
        "model": "claude-sonnet-4",
        "enable_thinking": false
      },
      {
        "provider": "copilot_chat",
        "model": "claude-opus-4.6",
        "enable_thinking": false
      },
      {
        "provider": "copilot_chat",
        "model": "claude-sonnet-4.5",
        "enable_thinking": false
      }
    ],
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4",
    },
  },
  "edit_predictions": {
    "provider": "copilot",
  },
  "git_panel": {
    "dock": "left",
  },
  "agent_servers": {
    "github-copilot": {
      "type": "registry",
    },
    "OpenCode": {
      "type": "custom",
      "command": "opencode",
      "args": ["acp"],
    },
  },
  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor", "..."],
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "cat > {buffer_path} && ./vendor/bin/pint --quiet {buffer_path} && cat {buffer_path}",
          ],
        },
      },
    },
    "Go": {
      "language_servers": ["gopls"],
    },
    "JavaScript": {
      "language_servers": ["tsserver"],
    },
    "Python": {
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"],
    },
    "TypeScript": {
      // Refer https://github.com/jellydn/ts-inlay-hints for how to setup for Neovim and VSCode
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true,
      },
    },
  }, // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules",
  ], // Turn off telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "centered_layout": {
    "right_padding": 0.15,
    "left_padding": 0.15,
  },
}
